{
  "name": "my-todo-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "src",
    "client"
  ],
  "scripts": {
    "start": ". ~/.nvm/nvm.sh && nvm use && concurrently \"npm:start:server\" \"npm:start:client\"",
    "watch": ". ~/.nvm/nvm.sh && nvm use && concurrently \"npm:start:server\" \"npm:start:client\"",
    "start:server": "cd src && npm run start:dev",
    "start:client": "cd client && npm run dev",
    "build": "nx run-many --target=build --all",
    "format": "prettier --write \"{src,client}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "nx run-many --target=lint --all",
    "lint:server": "cd src && npm run lint",
    "lint:client": "cd client && npm run lint",
    "lint:fix": "concurrently \"npm:lint:server:fix\" \"npm:lint:client:fix\"",
    "lint:server:fix": "cd src && npm run lint -- --fix",
    "lint:client:fix": "cd client && npm run lint -- --fix"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "concurrently": "^9.2.1",
    "nx": "^22.3.3",
    "nx-ignore": "^19.8.0",
    "prettier": "^3.7.4"
  },
  "overrides": {
    "nth-check": "2.1.1",
    "tmp": "^0.2.4",
    "svgo": "^4.0.0",
    "css-select": "^6.0.0",
    "glob": ">=11.0.4"
  }
}
