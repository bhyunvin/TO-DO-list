{
  "name": "my-todo-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "src",
    "client"
  ],
  "scripts": {
    "start": ". ~/.nvm/nvm.sh && nvm use && concurrently \"npm:start:server\" \"npm:start:client\"",
    "watch": ". ~/.nvm/nvm.sh && nvm use && concurrently \"npm:start:server\" \"npm:start:client\"",
    "start:server": "cd src && npm run start:dev",
    "start:client": "cd client && npm start",
    "build": "concurrently \"cd src && npm run build\" \"cd client && npm run build\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "concurrently \"npm:lint:server\" \"npm:lint:client\"",
    "lint:server": "cd src && npm run lint",
    "lint:client": "cd client && npm run lint",
    "lint:fix": "concurrently \"npm:lint:server:fix\" \"npm:lint:client:fix\"",
    "lint:server:fix": "cd src && npm run lint -- --fix",
    "lint:client:fix": "cd client && npm run lint -- --fix"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "prettier": "^3.6.2"
  },
  "overrides": {
    "nth-check": "2.1.1",
    "postcss": ">=8.4.31",
    "tmp": "^0.2.4",
    "svgo": "^4.0.0",
    "css-select": "^6.0.0",
    "resolve-url-loader": ">=5.0.0",
    "webpack-dev-server": "^4.15.2"
  },
  "dependencies": {}
}
