{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "test/.*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^marked$": "<rootDir>/../node_modules/marked/lib/marked.umd.js",
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFiles": ["<rootDir>/test/setup-e2e.ts"],
  "testTimeout": 60000
}
